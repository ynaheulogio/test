	<img src="/assets/image/po-quote.png">
</div>



<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-width">
    <div class="modal-content modal-height-login">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Log In</h4>
      </div>
      <div class="modal-body login-body-container">
        <table>
          <form action="post">
            <td>
             <a class="fb_link" href="/facebookauth"><button name="fb" type="button" class="btn btn-primary fb"><img src="/assets/image/fb-icon.png">  Log In with Facebook</button></a><br />
             <button type="button" class="btn btn-primary twitter"><img src="/assets/image/twitter.png">  Log In with Twitter</button>
            </td>
            <td><div class="or-margin">OR</div></td>
            <td align="left">
              <b>Email</b> <input type="text" class="form-control" size="30"><br />
              <b>Password</b> <input type="text" class="form-control" size="30"><br />
              <button type="submit" class="btn btn-default">Log in</button>
            </td>
          </form>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-width-signup">
    <div class="modal-content modal-height-signup">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
      </div>
      <div class="modal-body signup-body-container">
          <form class="form-horizontal" role="form">
              <div class="form-group">
                Full Name
                  <input type="email" class="form-control width-signup-fields">
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  <input type="email" class="form-control width-signup-fields">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                  <input type="password" class="form-control width-signup-fields">
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Confirm Password</label>
                <div class="col-sm-10">
                  <input type="password" class="form-control width-signup-fields">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <button type="submit" class="btn btn-default">Sign in</button>
                </div>
              </div>
            </form>
      </div>
    </div>
  </div>
</div>